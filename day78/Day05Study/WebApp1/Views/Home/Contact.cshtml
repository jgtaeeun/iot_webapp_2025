@{
    ViewData["Title"] = "Contact Page";
}


<!--page content-->
<div id="section" class="py-5">
    <div class="container px-5">
        <!--contact form-->
        <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
            <div class="text-center mb-5">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3">
                    <i class="bi bi-envelope"></i>
                </div>
                <h1 class="fw-bolder">Get in touch</h1>
                <p class="fw-normal lead text-muted mb-0">We'd love to hear from you</p>
            </div>
            <!--사용자 입력 폼-->
            <div class="row gx-5 justify-content-center">
                <div class="col-lg-8 col-xl-6">
                    <form id="contactForm" class="needs-validation" validate>
                        <div class="form-floating mb-3">
                            <input type="text"
                                   class="form-control"
                                   id="name"
                                   placeholder="Enter your name..."
                                   required />
                            <label for="name">Full name</label>
                            <div class="invalid-feedback">A name is required.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="email"
                                   class="form-control"
                                   id="email"
                                   placeholder="name@example.com"
                                   required />
                            <label for="email">Email address</label>
                            <div class="invalid-feedback">A email is required.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="tel"
                                   class="form-control"
                                   id="phone"
                                   placeholder="(123) 456-7890"
                                   required />
                            <label for="phone">Phone number</label>
                            <div class="invalid-feedback">A phone number is required.</div>
                        </div>
                        <div class="form-floating mb-3">
                            <textarea type="text"
                                      class="form-control"
                                      id="message"
                                      placeholder="Enter your message here..."
                                      style="height: 10rem;"
                                      required></textarea>
                            <label for="message">Message</label>
                            <div class="invalid-feedback">A message is required.</div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg" id="btnSubmit">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!--contact card-->
        <div class="row gx-5 row-cols-2 row-cols-lg-4 py-5">
            <div class="col mb-5 h-100">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 ">
                    <i class="bi bi-chat-dots "></i>
                </div>
                <h2 class="h5">Chat with us</h2>
                <p class="mb-0">Chat live with one of our support specialists.</p>
            </div>
            <div class="col mb-5 h-100">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 ">
                    <i class="bi bi-people"></i>
                </div>
                <h2 class="h5">Ask the community</h2>
                <p class="mb-0">Explore our community forums and communicate with other users.</p>
            </div>
            <div class="col mb-5 h-100">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 ">
                    <i class="bi bi-question-circle"></i>
                </div>
                <h2 class="h5">Support center</h2>
                <p class="mb-0">Browse FAQ's and support articles to find solutions.</p>
            </div>
            <div class="col mb-5 h-100">
                <div class="feature bg-primary bg-gradient text-white rounded-3 mb-3 ">
                    <i class="bi bi-telephone"></i>
                </div>
                <h2 class="h5">Call us</h2>
                <p class="mb-0">Call us during normal business hours at (555) 892-9403.</p>
            </div>
        </div>
    </div>
</div>